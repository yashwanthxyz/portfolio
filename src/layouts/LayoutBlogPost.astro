---
import { formatDate } from "../lib/helpers";
import BasicLayout from "./BasicLayout.astro";

type Props = {
  title: string;
  description: string;
  pubDate: Date;
  minutesRead: string;
  url: string;
};

const { title, description, pubDate, minutesRead, url } = Astro.props;
---

<BasicLayout description={description} page="blog" slug={url} title={title}>
  <main class="w-screen min-h-screen bg-neutral-950">
    <div class="max-w-3xl mx-auto px-6 py-16">
      <nav class="mb-12">
        <a
          class="inline-flex items-center gap-2 text-neutral-400 hover:text-white transition-colors"
          href="/blog"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Back
        </a>
      </nav>

      <article class="text-neutral-100">
        <header class="mb-8">
          <h1 class="text-4xl font-bold mb-4 text-white">{title}</h1>
          <div class="flex flex-wrap gap-4 text-neutral-400 text-sm">
            <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
            <span>Â·</span>
            <span>{minutesRead}</span>
          </div>
        </header>

        <div class="prose prose-invert max-w-none prose-pre:bg-neutral-900 prose-pre:border prose-pre:border-neutral-800">
          <slot />
        </div>
      </article>
    </div>
  </main>
</BasicLayout>
